# Here also go all build targets specific to this very newgrf

NML_FILE := generated/road-hog.nml

GENERATE_NML := road-hog-nml
GENERATE_LNG := road-hog-nml
GENERATE_DOC := road-hog-nml

GENERATE=src/build_road_hog.py

 # default num. pool workers for python compile,
 # default is 0 to disable multiprocessing (also avoids multiprocessing pickle failures masking genuine python errors)
pw = 0
roster = *

road-hog-nml:
	$(_E) [GENERATE]
	$(_V) python3 src/build_road_hog.py '${REPO_TITLE}' '${REPO_REVISION}' '${pw}' '${roster}'

clean::
	$(_V)-rm -r docs
	$(_V)-rm -r .chameleon_cache
	$(_V)-rm -r generated
	$(_V)-rm -r src/__pycache__
	$(_V)-rm -r src/*/__pycache__

<tal:main_template metal:use-macro="load: main_template.pt">
<div metal:fill-slot='body'>

    <div class="span12">
        <h2>${len(consists)} road vehicles for OpenTTD</h2>
        <hr />
        <table class="table table-striped tablesorter">
            <thead>
                <tr>
                    <th>Vehicle Name</th>
                    <th class="number">Intro Date</th>
                    <th>Special Features</th>
                </tr>
            </thead>
            <tbody>
                <tal:consists_list repeat="consist consists">
                    <tr>
                        <td>${consist.get_name_substr()} ${base_lang_strings[consist.get_str_name_suffix()]}</td>
                        <td class="number">${consist.intro_date}</td>
                        <td>
                            <tal:special_features repeat="feature doc_helper.get_special_features_for_vehicle(consist).items()">
                                ${feature[0]}: ${feature[1]}
                            </tal:special_features>
                        </td>
                    </tr>
                </tal:consists_list>
            </tbody>
        </table>
    </div>

</div>
</tal:main_template>
